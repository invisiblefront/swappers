}



/*------------------------------- chat window -------------------------------*/

.chat-window
{
  width: 100%;
  min-height: 150px;
  background-color: @chat-area-background;
  padding-top: 5px;
  padding-bottom: 10px;

  header
  {
    width: 100%;
    border-bottom: solid;
    border-width: 1px;
    border-color: #A0A0A0;
    padding-bottom: 10px
  }

  h3
  {
    text-align: center;
    text-transform: uppercase;
  }

  .chat-area ul li
  {
    margin-top: 15px;
    background-color: #6C6C6C;
    width: auto;
    width: 100%;
    display: block;
    float:left;
  }

  .chat-area ul li textarea
  {
    border: none;
    border-width: 0;
    padding: 10px;
    height: 50px;
    width: 45%;
    border-color: #FFFFFF
  }

  .my-qstn
  {
    float: right;
  }

  .opponent-qstn
  {
    float: left;
  }

  .chat-area ul li button
  {
    .abstact-button;
    width: 10%;
    height: 52px;
  }

}










/*------------------------------- media query for landscape, phone-------------------------------*/





  @media only screen and (max-width : 480px) {

    html, body
    {
      overflow-x:hidden;
    }

            .row {
              display: block;
              width: 100%;
              margin-bottom: 20px;
              float: left;
              background-color: @left-transaction-background;
            }

            .left-transaction {
              display: block;
              width: auto;
              float: left;
            }

            .left-transaction section
            {
              max-width: 700px;
            }

            .right-transaction {

              display: block;
              padding-top: 10px;
              float: left;
            }

            .right-transaction section
            {
              max-width: 700px;
              float: none !important;
            }

            .mid-transaction {
              display: block;
              padding: 0;
              width: 100%;
              height: 120px;
              float: left;
            }

            .mid-transaction-button {
              display: block;
              width: 100%;
              height: 60px !important;
            }

            .mid-transaction-button-agree
            {
              height: 60px !important;
            }

            .list-group-item a
            {
              width: 240px;
            }
  }




