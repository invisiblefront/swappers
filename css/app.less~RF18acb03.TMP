}
.new-account {
  width: 100%;
  text-align: center;
  color: #000000
}

.control-label
{
  font-family: 'Oswald', sans-serif;
  color: #000000;
  line-height: 25px
}

.register
{
  .login;
  boder:none
}

.register h2
{
  color: #000000;
