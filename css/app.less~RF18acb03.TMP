/* html5doctor.com Reset v1.6.1 (http://html5doctor.com/html-5-reset-stylesheet/) - http://cssreset.com */
html,body,div,span,object,iframe,h1,h2,h3,h4,h5,h6,p,blockquote,pre,abbr,address,cite,code,del,dfn,em,img,ins,kbd,q,samp,small,strong,sub,sup,var,b,i,dl,dt,dd,ol,ul,li,fieldset,form,label,legend,table,caption,tbody,tfoot,thead,tr,th,td,article,aside,canvas,details,figcaption,figure,footer,header,hgroup,menu,nav,section,summary,time,mark,audio,video{margin:0;padding:0;border:0;outline:0;font-size:100%;vertical-align:baseline;background:transparent}
body{line-height:1}
article,aside,details,figcaption,figure,footer,header,hgroup,menu,nav,section{display:block}
nav ul{list-style:none}
blockquote,q{quotes:none}
blockquote:before,blockquote:after,q:before,q:after{content:none}
a{margin:0;padding:0;font-size:100%;vertical-align:baseline;background:transparent}
ins{background-color:#ff9;color:#000;text-decoration:none}
mark{background-color:#ff9;color:#000;font-style:italic;font-weight:bold}
del{text-decoration:line-through}
abbr[title],dfn[title]{border-bottom:1px dotted;cursor:help}
table{border-collapse:collapse;border-spacing:0}
hr{display:block;height:1px;border:0;border-top:1px solid #ccc;margin:1em 0;padding:0}
input,select{vertical-align:middle;height:30px}
li{list-style:none;}
a{text-decoration:none;display:block;}
.abstact-button{cursor:pointer;background:none;border:solid;border-color:#000000;border-width:2px;}
h1{font-family:'Oswald',sans-serif;font-size:4rem;}
h2{font-family:'Open Sans',sans-serif;font-size:1.5rem;text-transform:uppercase;}
strong{text-transform:capitalize;}


/*---------------------- less variables ---------------------- */

@left-transaction-background:#AA1919;
@mid-transaction-background:#6F0000;
@right-transaction-background:#E25B2E;

@chat-area-background:#DDDDDD;


@items-background-color:#000000;
@items-disabled-background-color:#676767;

@transaction-item-background:#FCFCFC;

@transaction-accepted-background:#8C8C8C;
@transaction-accepted-items-background:#646464;



/*---------------------- globals ---------------------- */

html, body
{
  height: 100%;
}

.cross-browser-full-opacity
{
  -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=100)";
  filter: alpha(opacity=100);
  -moz-opacity: 1;
  -khtml-opacity: 1;
  opacity: 1;
}

.cross-browser-zero-opacity
{
  -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=100)";
  filter: alpha(opacity=0);
  -moz-opacity: 0;
  -khtml-opacity: 0;
  opacity: 0;
}

.cross-browser-dark-opacity
{
  -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=80)";
  filter: alpha(opacity=80);
  -moz-opacity: 0.8;
  -khtml-opacity: 0.8;
  opacity: 0.8;
}



legend
{
  color: #000000;
  font-family: 'Oswald', sans-serif;
}

select
{
  min-width: 145px;
}

h1
{
  @media only screen and (max-width : 480px) {
    font-size: 2rem;
  }
}

.notification
{
  color: #A82626;
  width: 100%;
  text-align: center;
}

.notification nav a
{
  color: #000000;
  font-size: 30px;
  display: block;
  padding: 20px;
}

.modal-overlay
{
  position: absolute;
  width: 100%;
  height: 100%;

  background-color: #FFFFFF;

  .cross-browser-dark-opacity;

  z-index: 2
}

.above-modal
{
  z-index: 300
}

/*--------------- trsansaction states -----------------------*/

.jumbotron
{
  -moz-transition-duration: 0.6s;
  -o-transition-duration: 0.6s;
  -webkit-transition-duration: 0.6s;
  transition-duration: 0.6s;

  .cross-browser-zero-opacity
}

.jumbotron.active {
  opacity:1;
  .cross-browser-full-opacity
}


/* ------------------------ styles ------------------------ */
