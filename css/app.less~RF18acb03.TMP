}


/* ------------------------------- items  ------------------------------- */
.well {
  margin-bottom: 20px;
}
.filter {
  margin-top: 10px;
}


/* ------- single available item ------*/

.list-group-item {
  font-family: 'Oswald', sans-serif;
  color: #FFFFFF;
  float: left;
  margin-right: 5px;
  margin-bottom: 5px;
}

.list-group-item a {
  width: 320px;
  height: 55px;
  padding: 10px;
  display: block;
  color: #FFFFFF;
  background-color: @items-background-color;
  overflow: hidden;

  -webkit-transition-duration: 0.3s;
  -webkit-transition-timing-function: linear;
  transition-duration: 0.3s;
  transition-timing-function: linear;
}
.list-group-item a:hover {
  color: #F97373;
  text-decoration: none;
}

/* ------- single un-available item ------*/

.list-group-item-borrowed
{
  .list-group-item;
}

.list-group-item-borrowed a
{
  width: 320px;
  height: 55px;
  padding: 10px;
  display: block;
  color: @items-disabled-background-color;
  background-color: #BCBCBC;
  overflow: hidden;
  cursor: default;

  -webkit-transition-duration: 0.3s;
  -webkit-transition-timing-function: linear;
  transition-duration: 0.3s;
  transition-timing-function: linear;
}

.list-group-item-borrowed a:hover
{
  color: #616161;

}



.item-icon {
  float: left;
  width: 50px;
  height: 60px;
  margin-right: 10px;
  font-size: 3.5rem;
}

.item-content header h4 {
  margin-top: 4px;
  font-size: 1.2rem;
  text-transform: uppercase;
  line-height: 23px;
}
.item-content header span {
  font-style: italic;
}

/* ------------------------------- borrow time selector  ------------------------------- */

.time-selection
{
    height: 50px;
    width: 320px;
}

.time-selection label
{
  width: 30px;
  font-size: 0.9rem;
  line-height: 20px
}

.time-selection input[type="number"]
{
    font-size: 1rem;
    height: 30px;
    width: 90px;
    font-weight: bold;
}


.confirm-swap-btn {
    border: none;
    height: 29px;
    width: 110px;
    background-color: #E25B2E;
    color: #000000;
    cursor: pointer;
    text-transform: uppercase;
}

.discard-swap-btn
{
    border: none;
    height: 29px;
    width: 29px;
    cursor: pointer;
    background-color: #E25B2E;
    color: #000000;
    text-transform: uppercase;
}

.borrowed
{
  display: none;
  background-color: #C3C3C3
}


/* ------------------------------- transactions items  ------------------------------- */
.transaction-list {
  font-family: 'Oswald', sans-serif;
}

.transaction-list h1 {
  margin-bottom: 10px;
}

.transaction-list h3 {
  line-height: 1.3rem;
  margin-top: 12px;
}


.transaction-list ul {
  margin: 0;
  padding: 0;
  width: 100%;
}
.transaction-list ul li {
  list-style: none;
  margin-bottom: 20px;
}

[class*="col-"] {
  padding-top: 15px;
  padding-bottom: 15px;
/*  border: 1px solid #ddd;
  border: 1px solid rgba(86, 61, 124, .2);*/
  color: #FFFFFF;
}
.row {
  background-color: #FAC547;
  padding-bottom: 10px;
  display: box; /* Firefox */
  display: -moz-box;
  -moz-box-orient: horizontal; /* Safari, Opera, and Chrome */
  display: -webkit-box;
  -webkit-box-orient: horizontal; /* W3C */
  display: box;
  box-orient: horizontal;
  width: 100%;

}
.left-transaction {
  background-color: @left-transaction-background;

  padding: 0;
  padding-left: 10px;
  padding-right: 10px;

  -moz-box-flex: 1.0; /* Firefox */
  -webkit-box-flex: 1.0; /* Safari and Chrome */
  -ms-flex: 1.0; /* Internet Explorer 10 */
  box-flex: 1.0;
  width: 50%;
}

.left-transaction section
{
  max-width: 700px;
}

.right-transaction {
  background-color: @right-transaction-background;

  padding: 0;
  padding-left: 10px;
  padding-right: 10px;

  -moz-box-flex: 1.0; /* Firefox */
  -webkit-box-flex: 1.0; /* Safari and Chrome */
  -ms-flex: 1.0; /* Internet Explorer 10 */
  box-flex: 1.0;
}


.right-transaction section
{
  max-width: 700px;
  float: none !important;
}

.mid-transaction {
  background-color: @mid-transaction-background;
  -moz-box-flex: 1.0;
  -webkit-box-flex: 1.0;
  -ms-flex: 1.0;
  box-flex: 1.0;
  padding: 0;
  min-width: 100px;
  height: 100%;
}


.mid-transaction-button {
  position: relative;
  background-color: #6F0000;
  -moz-box-flex: 1.0; /* Firefox */
  -webkit-box-flex: 1.0; /* Safari and Chrome */
  -ms-flex: 1.0; /* Internet Explorer 10 */

  width: 100%;
  height: inherit;

  background-image: url("../img/icons/transition-icon.gif");
  background-repeat: no-repeat;
  background-position: center;
  border: none;
  opacity: 0.5;
  cursor: pointer;


  -webkit-transition-duration: 0.3s;
  -webkit-transition-timing-function: linear;
  transition-duration: 0.3s;
  transition-timing-function: linear;
}

.mid-transaction-waiting
{
  .mid-transaction-button;
  background-image: url("../img/icons/transition-wait-icon.gif");
}

.mid-transaction-button:hover {

 background-color: #480000;
}


.mid-transaction-button-agree
{
  .mid-transaction-button;
  background-color: #930000;
   background-image: url("../img/icons/agree-icon.gif");
}

.mid-transaction-button-agree:hover
{
  background-color: #820000;
}

.right-transaction button strong {
  text-transform: capitalize;
}
.left-transaction h3 strong {
  text-transform: capitalize;
}
.library-btn {
  background-color: #FFFFFF;
  border: none;
  color: #000000;
  width: 100%;
  height: 140px;
  margin-top: 10px;
  -moz-transition: color 0.4s linear;
  -o-transition: color 0.4s linear;
  -webkit-transition: color 0.4s linear;
  -ms-transition: color 0.4s linear;
}
.right-transaction button:hover {
  background-color: #F9BD31
}

.transaction-item {
  float: left;
  width: 250px;
  margin-right:25px;
  margin-bottom: 25px;

  @media only screen and (max-width : 480px) {
    width:auto;
  }
}

.transaction-item a {

  width: 100%;
  padding: 10px;
  display: block;
  color: #000000;
  background-color: @transaction-item-background;
  -moz-transition: color 0.3s linear;
  -o-transition: color 0.3s linear;
  -webkit-transition: color 0.3s linear;
  -ms-transition: color 0.3s linear;
}

.transaction-item a:hover {
  text-decoration: none;
  color: #000000;
  background-color: #F9BD31
}
.transactionLibrary {
  float: none;
}
.closeTransactionLibrary {
  float: right;
  margin-top: 10px;
  .abstact-button
}
.transaction-list {

}
.show-more-btn {
  .abstact-button;
  height: 40px;
  margin-bottom: 10px;
}
.swap-item {
  margin-bottom: 10px;
}


.transaction-accepted
{
  background-color: @transaction-accepted-background;
  cursor: default;

    .left-transaction {
      background-color: @transaction-accepted-background;

      .transaction-item a
      {
        background-color:  @transaction-accepted-items-background;
        color: #FDFDFD;
        cursor: default;
      }

      .transaction-item a:hover
      {
        background-color:  @transaction-accepted-items-background;
      }
    }

    .right-transaction
    {
      background-color: @transaction-accepted-background;

      .list-group-item a {
        background-color: @transaction-accepted-items-background;
        cursor: default;
      }

      .list-group-item a:hover {
        color: #FFFFFF
      }

      .show-more-btn
      {
        display: none;
      }
    }

    .mid-transaction
    {
      background-color: @transaction-accepted-background;
      background-image: url("../img/icons/accepted-icon.gif");
      background-repeat: no-repeat;
      background-position: center;
    }

    .mid-transaction-button
    {
      display: none;
    }

    .mid-transaction-button-agree
    {
      display: none;
    }






}



